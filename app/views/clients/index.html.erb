<section class="header-16-sub-client">
  <div id="h-16-pt-main" class="page-transitions pt-perspective">
    <div class="v-center pt-page pt-page-1 pt-page-current">
      <div>
        <div class="background" id="header-main">&nbsp;</div>
        <div class="container">
          <div class="hero-unit" id="center-main">
            <h2>GET TO KNOW OUR CLIENTS</h2>
            <h1>CLIENTS</h1>
          </div>
        </div>
      </div>
      <span class="scroll-btn"><a href="#next"> <span class="mouse"><span> </span></span></a></span>
    </div>
  </div>
</section>
<div id="next"></div>

<section class="sport-tag">
  <div class="container-fluid">
    <div class="row">
      <div class="com-xs-12">
        <ul>
          <% tag_cloud Client.tag_counts, %w[s m l] do |tag| %>
            <li>
              <%= link_to tag.name, tag_path(tag.name) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container-fluid">
    <div class="main">
      <ul id="og-grid" class="og-grid js-isotope">
        <% @clients.each do |client| %>
        <li>
          <%= link_to image_tag(client.image.url(:thumb)), client, data: {largesrc: client.image.url(:preview), title: client.name, description: client.bio.first(200).to_s+'...'+' Read More', isotope_options: '.'+client.tag_list.to_s } %>
        </li>
        <% end %>
      </ul>
    </div>
  </div><!-- /container -->
</section>
