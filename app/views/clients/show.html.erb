<header class="header-8 navbar-fixed-top navbar" id="navbkg" style="display:block;">
  <%= link_to image_tag('logo-sm.png'), root_path, id: 'logotop' %>
</header>
<section class="clientshow">
  <div class="container-fluid" style="padding-left: 0px;padding-right: 0px;">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-xs-12 col-lg-6">
            <%= image_tag @client.image.url(:retina), class: 'img-responsive' %>
          </div>
          <div class="col-xs-10 col-xs-offset-1 col-lg-5 col-lg-offset-0">
            <h1><%= @client.name %></h1>
            <h3>Bio:</h3>
            <p><%= @client.bio %></p>
            <%= link_to 'Back to Clients', clients_path %>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
